# VeriPharm Environment Variables Template
# Copy this file to .env.local for development or configure in Vercel dashboard for production

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
VITE_SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Application Configuration
VITE_APP_NAME=VeriPharm
VITE_APP_VERSION=0.2.0
VITE_APP_ENVIRONMENT=production

# API Configuration
VITE_API_URL=https://your-app.vercel.app/api
VITE_APP_URL=https://your-app.vercel.app

# Features Flags (optional)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Debug Configuration (development only)
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# Database Configuration
VITE_DB_MAX_CONNECTIONS=10
VITE_DB_TIMEOUT=30000

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=true

# Performance Configuration
VITE_CHUNK_SIZE_LIMIT=1000
VITE_PREFETCH_CHUNKS=true

# Regional Configuration
VITE_DEFAULT_CURRENCY=USD
VITE_DEFAULT_TIMEZONE=UTC
VITE_DEFAULT_LOCALE=en-US 